@media print {

/* The page */
@page {
    size: portrait;

    margin-left: 1.27cm;
    margin-right: 1.27cm;
    margin-top: 1.27cm;
    margin-bottom: 2.54cm;
}

/* Tips, caveats, etc */
div.custom-block {
    /* Avoid page-breaks */
    page-break-inside: avoid;
}

/* All images */
img {
    /* Center */
    display: block;
    margin-left: auto;
    margin-right: auto;

    /* Avoid page-breaks */
    page-break-inside: avoid;
}

/* Print links */
p a::after {
    content: " (" attr(href) ") ";
}

body {
    font-size: 11pt;
}

}
